<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-padding: 25; -fx-background-color: #F4F7FA;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iescamp.studyflow.controller.TaskOverviewController">
    <children>
        <Label text="Upcoming Tasks" textFill="#333333">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>

        <HBox spacing="15.0">
            <children>
                <Label alignment="CENTER" prefHeight="80.0" prefWidth="200.0" style="-fx-background-color: #34495e; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: bold;" text="3 Tasks Due Today" />
                <Label alignment="CENTER" prefHeight="80.0" prefWidth="200.0" style="-fx-background-color: #27ae60; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: bold;" text="Next Exam: Physics" />
                <Label alignment="CENTER" prefHeight="80.0" prefWidth="200.0" style="-fx-background-color: #2980b9; -fx-background-radius: 8; -fx-text-fill: white; -fx-font-weight: bold;" text="Overall GPA: 3.8" />
            </children>
        </HBox>

        <TableView fx:id="taskTable" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn prefWidth="300.0" text="Title">
                    <cellValueFactory><PropertyValueFactory property="title" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="250.0" text="Description">
                    <cellValueFactory><PropertyValueFactory property="descriptionTask" /></cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="120.0" text="Due Date">
                    <cellValueFactory><PropertyValueFactory property="dueDate" /></cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox spacing="10.0">
            <children>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#openCreateTaskDialog" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="+ Add New Task" />
                <Button mnemonicParsing="false" onAction="#handleDeleteTask" style="-fx-background-color: transparent; -fx-border-color: #e74c3c; -fx-text-fill: #e74c3c;" text="Delete Selected" />
            </children>
        </HBox>
    </children>
</VBox>