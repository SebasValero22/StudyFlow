<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #F4F7FA;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iescamp.studyflow.controller.RegisterController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <Label text="Create Account" textFill="#2196f3">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Join StudyFlow today" textFill="#777777" />

        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Full Name" textFill="#555555" />
                <TextField fx:id="txtName" promptText="e.g. Manolo Garcia" style="-fx-background-color: #F0F2F5; -fx-padding: 8;" />

                <Label text="Email Address" textFill="#555555" />
                <TextField fx:id="txtEmail" promptText="manolo@email.com" style="-fx-background-color: #F0F2F5; -fx-padding: 8;" />

                <Label text="Password" textFill="#555555" />
                <PasswordField fx:id="txtPassword" promptText="********" style="-fx-background-color: #F0F2F5; -fx-padding: 8;" />

                <Button fx:id="btnRegister" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleRegister" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5;" text="Sign Up" />
            </children>
        </VBox>

        <Label fx:id="lblStatus" textFill="#e74c3c" wrapText="true" alignment="CENTER" textAlignment="CENTER"/>

        <Button fx:id="btnLogin" style="-fx-background-color: transparent; -fx-text-fill: #2196f3; -fx-underline: true;" text="Already have an account? Log In" onAction="#handleBackToLogin"/>
    </children>
</VBox>