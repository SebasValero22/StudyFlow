<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.iescamp.studyflow.controller.ExamsController" style="-fx-padding: 20; -fx-background-color: #f4f7f6;">
    <Label text="EXAMS CALENDAR" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <TableView fx:id="examsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colExamName" text="EXAM" prefWidth="180"/>
            <TableColumn fx:id="colExamType" text="TYPE" prefWidth="100"/>
            <TableColumn fx:id="colDate" text="DATE" prefWidth="120"/>
            <TableColumn fx:id="colRoom" text="CLASSROOM" prefWidth="100"/>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="ADD EXAM" onAction="#handleNewExam"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
    </HBox>
</VBox>